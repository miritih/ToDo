-if tasks.empty?
	%span.text-warning There are no tasks!
-else
	%table.table.table-striped.table-hover.table-bordered.table-condensed
		%thead
			%tr
				%th title
				%th Created At
				%th User
				%th Compleated
				%th Actions
			%tbody
				- tasks.each do |task|
					%tr
						%td
							%strong= task.title
						%td.text-info= task.created_at
						%td.text-danger= task.user.email
						%td.text-success= task.completed
						%td
							=link_to task_path(task), remote: true, method: :delete, data: {confirm: "are you sure you what to delete task #{task.title}?"} do 
								=fa_icon "times-circle-o" 
							= link_to edit_task_path(task), remote: true do
								=fa_icon "edit"